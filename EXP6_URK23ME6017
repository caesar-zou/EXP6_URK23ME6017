File 1: Student.java (inside package)
package studentpack;

public class Student {
    private String name;
    private String regNo;

    // Setter methods
    public void setName(String n) {
        name = n;
    }

    public void setRegNo(String string) {
        regNo = string;
    }

    // Getter methods
    public String getName() {
        return name;
    }

    public String getRegNo() {
        return regNo;
    }
}


File 2: PackageEncapsulationDemo.java
package studentpack;
import studentpack.Student;

public class PackageEncapsulationDemo {
    public static void main(String[] args) {
        Student s = new Student();
        
        s.setName("CAESAR");
        s.setRegNo("URK23ME6017");
        
        System.out.println("Student Name: " + s.getName());
        System.out.println("Register Number: " + s.getRegNo());
    }
}
